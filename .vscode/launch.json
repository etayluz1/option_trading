{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run simulate.py (Integrated Terminal)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/simulate.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "justMyCode": false
    },
    {
      "name": "Run Current File (Integrated Terminal)",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "justMyCode": false
    }
  ]
}
